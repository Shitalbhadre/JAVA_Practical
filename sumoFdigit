
//SumOfDigit : Using while loop

        public static String getSum(int number){
           int sum = 0;
           StringBuilder sb = new StringBuilder();
           if(number==0) return number+"="+number;
               while(number>0){
               int digit = number%10;
                sb.append(digit);
                sb.append("+");
                sum = sum+digit;
                number = number/10;
            }
            sb.deleteCharAt(sb.length()-1);
            return sb.reverse()+"=" + String.valueOf(sum);
       }

